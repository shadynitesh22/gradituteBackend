{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "paths": {
          "*": ["node_modules/*"]
      }
  },
  "include": ["src/**/*"]
}